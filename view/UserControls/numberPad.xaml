<UserControl x:Class="Calc.view.UserControls.numberPad"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Calc.view.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Button Grid.Column="0" Name="btnNum" Margin="0.5" Background="Gray"  Content="{Binding contentFill}" FontSize="{Binding sizeFill}" FontFamily="Segoe UI" Foreground="White" Click="btnNum_Click"/>
</UserControl>
